<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Zadanie1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Name="Button1" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" MinHeight="80" Background="Red" Click="Button1_Click">Zadanie 2</Button>
        <Button Name="Button2" Grid.Row="0" Grid.Column="1" Grid.RowSpan="4" Background="Black" />
        <Button Name="Button3" Grid.Row="0" Grid.Column="3" Background="Yellow" Click="Button3_Click">Zadanie 3 i 4</Button>
        <Button Name="Button4" Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" Background="Blue" MinHeight="60"></Button>
        
    </Grid>
</Window>
