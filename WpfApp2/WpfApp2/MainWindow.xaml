<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="MainWindow" Height="450" Width="800">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Name="OkButton" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" MinHeight="80" Background="Red">1</Button>
            <Button Name="Name2" Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Background="Black"></Button>
            <Button Name="Name3" Grid.Row="0" Grid.Column="3" Background="Yellow">2</Button>
            <Button Name="Name4" Grid.Row="2" Grid.Column="2" Background="Blue" MinHeight="60">3</Button>
    </Grid>
</Window>
