<Window x:Class="WpfApp2.StudentEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Edycja studenta"
        Width="400" Height="200">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Width="100" HorizontalContentAlignment="Right">Imię</Label>
            <TextBox x:Name="Imie" Width="300"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Width="100" HorizontalContentAlignment="Right">Nazwisko</Label>
            <TextBox x:Name="Nazwisko" Width="300"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Width="100" HorizontalContentAlignment="Right">Nr Indeksu</Label>
            <TextBox x:Name="NrIndeksu" Width="300"></TextBox>
        </StackPanel>
        <Button x:Name="Close" Width="300" HorizontalAlignment="Right" Margin="5" Click="Close_Click">Zamknij</Button>
    </StackPanel>
</Window>
